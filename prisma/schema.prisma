generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model payment {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  amount Float
}

model contestant {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model vote {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  counter Int
}
